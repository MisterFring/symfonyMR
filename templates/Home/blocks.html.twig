{% endblock %}

{% block list %}
    <div style="display: flex;
	justify-content: space-between;
	flex-wrap: wrap;">
    {% for team in teams %}

            <div style="flex-basis: 40%; justify-content: space-between">
                <h2>{{ team.title }}</h2>
                {% if (team.avatar != null) %}
                    <img src="{{ team.avatar }}">
                {% endif %}
                <div>
                    <a href="{{ path('delete_team', {'id' : team.id}) }}">
                        <button type="submit" >Delete</button>
                    </a>
                    <a href="{{ path('modify_team', {'id' : team.id}) }}">
                        <button type="submit" >Modify</button>
                    </a>
                </div>
            </div>
    {% endfor %}
    </div>
{% endblock %}
